{
  "manifest_version": 2,
  "name": "Sail Boat",
  "description": "Browser as it should be.",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["styles.css"],
      "js": ["js/jquery/jquery-3.2.1.min.js", "onpage.js"]
    }
  ],

  "browser_action": {
    "default_icon": "SailBoat.png",
    "default_popup": "browserAction.html",
    "default_title": "Sail Boat"
  },

  "background": {
    "scripts": [
      "background.js",
      "controller.js"
    ]
  },



  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus"
  ],
  "icons": {
    "16": "SailBoat.png"
  },
  "commands": {
    "view-all-tasks" : {
      "suggested-key" : {
        "mac" : "Command+Shift+Y"
      },
      "description": "View all tasks"
    }
  }
}
