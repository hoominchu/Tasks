{
  "manifest_version": 2,

  "name": "Sail Boat",
  "description": "Browser as it should be.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "SailBoat.png",
    "default_popup": "browserAction.html",
    "default_title": "Sail Boat"
  },

  "background": {
    "scripts": ["getTabs.js"]
  },

  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}
