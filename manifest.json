{
  "manifest_version": 2,
  "name": "Sail Boat Test",
  "description": "Browser as it should be.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/SailBoat.png",
    "default_popup": "popup/browserAction.html",
    "default_title": "Sail Boat"
  },
  "background": {
    "scripts": [
      "lib/jquery-3.2.1.min.js",
      "lib/compromise.min.js",
      "lib/lodash.js",
      "lib/jLouvain.js",
      "utils/util.js",
      "utils/web-util.js",
      "init.js",
      "tasks.js",
      "webpage.js",
      "contextmenu.js",
      "domain.js",
      "author.js",
      "search.js",
      "background.js",
      "tag.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": [
        "css/custom.css",
        "contentscripts/contentscript.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/jquery-ui.min.js",
        "lib/compromise.min.js",
        "lib/lodash.js",
        "utils/util.js",
        "utils/web-util.js",
        "contentscripts/tag.js",
        "contentscripts/tag.js",
        "contentscripts/like.js",
        "contentscripts/time.js",
        "contentscripts/contentscript.js",
        "contentscripts/contentanalyser.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "chrome_ex_oauth.html",
    "chrome_ex_oauth.js",
    "chrome_ex_oauthsimple.html",
    "images/archive.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe eval' object-src 'self'",
  "permissions": [
    "tabs",
    "identity",
    "identity.email",
    "storage",
    "history",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus",
    "notifications",
    "https://docs.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "http://*.google.com/",
    "http://*/",
    "https://*/"
  ],
  "oauth2": {
    "client_id": "263846417973-s13arqju7bhiaco6rd9lkrcnh5jsffla.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/contacts",
      "profile",
      "https://www.google.com/m8/feeds/*"
    ]
  },
  "icons": {
    "16": "images/SailBoat.png"
  },
  "chrome_url_overrides" : {
    "newtab": "html/index.html"
  },
  "commands": {
    "like-page": {
      "suggested-key": {
        "default": "Ctrl+L",
        "mac": "Command+L"
      },
      "description": "Like page"
    }
  }
}
