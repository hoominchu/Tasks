{
  "manifest_version": 2,
  "name": "Sail Boat",
  "description": "Browser as it should be.",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "contentscripts/styles.css"
      ],
      "js": [
        "js/jquery/jquery-3.2.1.min.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "images/SailBoat.png",
    "default_popup": "popup/browserAction.html",
    "default_title": "Sail Boat"
  },
  "background": {
    "scripts": [
      "init.js",
      "util.js",
      "web-util.js",
      "tasks.js",
      "webpage.js",
      "contextmenu.js",
      "domain.js",
      "author.js",
      "search.js",
      "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["css/font-awesome-4.7.0/css/font-awesome.min.css", "contentscripts/contentscript.css"],
      "js": ["js/jquery/jquery-3.2.1.min.js", "contentscripts/contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "chrome_ex_oauth.html",
    "chrome_ex_oauth.js",
    "chrome_ex_oauthsimple.html"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe eval' object-src 'self'",
  "permissions": [
    "tabs",
    "identity",
    "identity.email",
    "storage",
    "bookmarks",
    "unlimitedStorage",
    "contextMenus",
    "https://docs.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "http://*.google.com/",
    "http://*/",
    "https://*/"
  ],
  "oauth2": {
    "client_id": "263846417973-s13arqju7bhiaco6rd9lkrcnh5jsffla.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/contacts",
      "profile",
      "https://www.google.com/m8/feeds/*"
    ]
  },
  "icons": {
    "16": "images/SailBoat.png"
  },
  "commands": {
    "view-all-tasks": {
      "suggested-key": {
        "mac": "Command+Shift+Y"
      },
      "description": "View all tasks"
    }
  }
}
